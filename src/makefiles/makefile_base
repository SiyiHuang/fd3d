ALL: fd3d

VPATH = impls
CLEANFILES = fd3d

UTIL = util
INC = include

CPPFLAGS = ${CPPFLAGS} -I${INC}
CFLAGS = ${CFLAGS_CUSTOM}
FFLAGS =
FPPFLAGS =

ifeq (${DEBUG}, 0)
	CPPFLAGS = -I${INC}
else
	CPPFLAGS = -g -I${INC}
endif

include ${PETSC_DIR}/conf/variables
include ${PETSC_DIR}/conf/rules

h5.o: ${INC}/h5.h
mat.o: ${INC}/mat.h
gridinfo.o: ${INC}/gridinfo.h
logging.o: ${INC}/logging.h
vec.o: ${INC}/vec.h
solver.o: ${INC}/solver.h
output.o: ${INC}/output.h

# Use ${FD3D_ROOT} instead of .. to keep these files in src/makefiles/ directory.
fd3d: fd3d.o h5.o mat.o gridinfo.o logging.o vec.o solver.o output.o chkopts
	${CLINKER} -o fd3d fd3d.o h5.o mat.o vec.o gridinfo.o logging.o solver.o output.o ${PETSC_LIB}
ifeq (${DEBUG}, 0)
	${RM} -rf *.dSYM
else
	-dsymutil fd3d
endif
	${MV} fd3d ../bin
	${RM} fd3d.o
	#${CP} *.c ../bin
	${CP} ${UTIL}/scanin ../bin
	${CP} ${UTIL}/scanjob ../bin
	chmod +x ../bin/scanin
	chmod +x ../bin/scanjob
